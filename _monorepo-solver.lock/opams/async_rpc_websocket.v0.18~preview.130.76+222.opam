opam-version: "2.0"
maintainer: "Jane Street developers"
authors: ["Jane Street Group, LLC"]
homepage: "https://github.com/janestreet/async_rpc_websocket"
bug-reports: "https://github.com/janestreet/async_rpc_websocket/issues"
