license: "MIT"
build: [
  ["dune" "build" "-p" name "-j" jobs]
]
depends: [
  "ocaml"                  {>= "5.1.0"}
  "async"                  {= "v0.18~preview.130.76+222"}
  "async_rpc_kernel"       {= "v0.18~preview.130.76+222"}
  "async_websocket"        {= "v0.18~preview.130.76+222"}
