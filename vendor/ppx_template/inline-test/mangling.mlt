let%template access_and_visibility_mangling : ('i : immediate). 'i @ a -> 'i @ v =
  fun i -> i
[@@mode a = (read_write, read, immutable), v = (stateful, observing, stateless)]
;;

[%%expect
  {|
val access_and_visibility_mangling : ('i : immediate). 'i -> 'i = <fun>
val access_and_visibility_mangling__observing :
  ('i : immediate). 'i -> 'i @ observing = <fun>
val access_and_visibility_mangling__stateless :
  ('i : immediate). 'i -> 'i @ stateless = <fun>
val access_and_visibility_mangling__read : ('i : immediate). 'i @ read -> 'i =
  <fun>
val access_and_visibility_mangling__observing__read :
  ('i : immediate). 'i @ read -> 'i @ observing = <fun>
val access_and_visibility_mangling__stateless__read :
  ('i : immediate). 'i @ read -> 'i @ stateless = <fun>
val access_and_visibility_mangling__immutable :
  ('i : immediate). 'i @ immutable -> 'i = <fun>
val access_and_visibility_mangling__observing__immutable :
  ('i : immediate). 'i @ immutable -> 'i @ observing = <fun>
val access_and_visibility_mangling__stateless__immutable :
  ('i : immediate). 'i @ immutable -> 'i @ stateless = <fun>
|}]


(* We stably sort mode variables by axis when mangling, so if two variables range over
   multiple axes, it's possible for us to generate the same function name twice. *)

let%template bad_mode_variables : 'a. 'a @ m -> 'b @ n -> unit = fun _ _ -> ()
[@@mode m = (local, read), n = (read, local)]
;;

[%%expect
  {|
Line _, characters _-_:
Error: Variable bad_mode_variables__local__read is bound several times in this matching
|}]
