opam-version: "2.0"
maintainer: "Jane Street developers"
authors: ["Jane Street Group, LLC"]
homepage: "https://github.com/janestreet/ppx_int63_literal"
bug-reports: "https://github.com/janestreet/ppx_int63_literal/issues"
dev-repo: "git+https://github.com/janestreet/ppx_int63_literal.git"
doc: "https://ocaml.janestreet.com/ocaml-core/latest/doc/ppx_int63_literal/index.html"
license: "MIT"
build: [
  ["dune" "build" "-p" name "-j" jobs]
]
depends: [
  "ocaml" {>= "5.2.0"}
  "base"
  "dune"   {>= "3.17.0"}
  "ppxlib" {= "0.33.0+ox"}
]
available: arch != "arm32" & arch != "x86_32"
synopsis: "Syntax extension for writing int63 literals."
description: "
This ppx allows users to write `Int63.t` values as literals, e.g. `Int63.zero` is `0J`.
"
