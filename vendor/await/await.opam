opam-version: "2.0"
maintainer: "Jane Street developers"
authors: ["Jane Street Group, LLC"]
homepage: "https://github.com/janestreet/await"
bug-reports: "https://github.com/janestreet/await/issues"
dev-repo: "git+https://github.com/janestreet/await.git"
doc: "https://ocaml.janestreet.com/ocaml-core/latest/doc/await/index.html"
license: "MIT"
build: [
  ["dune" "build" "-p" name "-j" jobs]
]
depends: [
  "ocaml" {>= "5.2.0"}
  "async"
  "base"
  "basement"
  "core"
  "oxcaml_effect"
  "portable"
  "ppx_debug_assert"
  "ppx_fuelproof"
  "ppx_jane"
  "ppx_sexp_conv"
  "ppx_sexp_value"
  "ppx_shorthand"
  "ppx_template"
  "dune"             {>= "3.17.0"}
]
available: arch != "arm32" & arch != "x86_32"
synopsis: "Implementations of awaiting and synchronization primitives for OxCaml"
description: "
[Await] provides implementations of awaiting and synchronization primitives for OxCaml.
"
