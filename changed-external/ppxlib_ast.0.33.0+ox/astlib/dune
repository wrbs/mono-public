(library
 (name astlib)
 (public_name ppxlib_ast.astlib)
 (libraries ocaml-compiler-libs.common compiler-libs.common)
 (flags -w -9)
 (preprocess
  (action
   (run %{exe:pp/pp.exe} %{read:ast-version} %{input-file}))))

(rule
 (targets ast-version)
 (action
  (run %{ocaml} %{dep:config/gen.ml} 9.99)))

(cinaps
 (files *.ml *.mli)
 (libraries astlib_cinaps_helpers))
